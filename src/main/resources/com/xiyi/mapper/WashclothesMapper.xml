<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiyi.mapper.WashclothesMapper">

    <resultMap id="activity" type="com.xiyi.domain.Activity">
        <result property="actId" column="act_id"/>
        <result property="actName" column="act_name"/>
        <result property="actDiscount" column="act_discount"/>
    </resultMap>

    <resultMap id="city" type="com.xiyi.domain.City">
        <result property="grandpaId" column="grandpaId"/>
        <result property="grandpaName" column="grandpaName"/>
        <result property="parentId" column="parentId"/>
        <result property="parentName" column="parentName"/>
        <result property="childId" column="childId"/>
        <result property="childName" column="childName"/>
    </resultMap>

    <select id="getActivity" resultMap="activity">
        select act_id,act_name,act_discount from activity
    </select>
    <select id="getCity" parameterType="java.lang.String" resultMap="city"  >
        select
            t.id 'grandpaId',
                t.cityname 'grandpaName',
                y.tId 'parentId',
                y.tCityname 'parentName',
                y.cId 'childId',
                y.cCityname 'childName'
        from
            city t
                right join (
                select
                    t.pid 'tPid',
                        t.id 'tId',
                        t.cityname 'tCityname',
                        c.id 'cId',
                        c.cityname 'cCityname'
                from
                    city t
                        right join (
                        select
                            *
                        from
                            city c
                        where
                                c.id =(
                                select
                                    a.act_place
                                from
                                    activity a
                                where
                                    a.act_id = #{actId}) ) c on
                        c.pid = t.id) y on
                y.tPid = t.id
    </select>
</mapper>